<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="Entity.Carspecs" table="carspecs" catalog="dbcars">
       <id name="SPEC_ID" type="java.lang.Integer">
           <column name="SPEC_ID" length="10"/>
           <generator class="native" />
       </id>

       <property name="body" type="string">
           <column name="BODY" length="20" not-null="true" unique="true" />
       </property>

       <property name="color" type="string">
           <column name="COLOR" length="20" not-null="true" unique="true" />
       </property>

       <property name="engine_size" type="float">
           <column name="ENGINE_SIZE" length="5" not-null="true" unique="true" />
       </property>

       <property name="ID" type="int">
           <column name="ID" length="5" not-null="true" unique="true" />
       </property>
       <one-to-one name="ID" class="Entity.Car"
                    column="ID" not-null="true"/>
   </class>

</hibernate-mapping>